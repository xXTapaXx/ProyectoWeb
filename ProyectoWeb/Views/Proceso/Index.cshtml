@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <table id="mytable" class="table table-striped table-bordered table-responsive">
            <h1 class="title-top-table">Proceso Orden</h1>
        </table>

    @using (Html.BeginForm("buscar", "Proceso", new { id= "form-buscar" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-12">
        <div class="form-group">
            @Html.Label("Numero de Orden", htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.Editor("orden", new { htmlAttributes = new { @class = "form-control", @placeholder = "Numero de Orden" } })
            @Html.ValidationMessage("Numero de Orden", "", new { @class = "text-danger" })
        </div>
    </div>


           
    <a type="button" id="buscar" data-title="buscar" data-placement="top" onclick="buscar();" href="#" class="btn btn-primary col-lg-12"><span class="glyphicon glyphicon-search"></span> Buscar</a>
}





            <div class="tab-pane oculto" id="proceso">
                <a type="button" id="1" data-title="asignarProceso" data-placement="top" href="#" class="btn btn-primary btn-tab btn-circle proceso "><span class="fa  fa-pencil"></span> Diseño</a>
                <a type="button" id="2" data-title="asignarProceso" data-placement="top" href="#" class="btn btn-success btn-tab btn-circle proceso "><span class="fa  fa-print"></span> Impresion</a>
                <a type="button" id="3" data-title="asignarProceso" data-placement="top" href="#" class="btn btn-info btn-tab btn-circle proceso "><span class="fa  fa-tags"></span> Numeracion</a>
                <a type="button" id="4" data-title="asignarProceso" data-placement="top" href="#" class="btn btn-danger btn-tab btn-circle proceso"><span class="fa  fa-sitemap"></span> Coleccion</a>
                <a type="button" id="5" data-title="asignarProceso" data-placement="top" href="#" class="btn btn-warning btn-tab btn-circle proceso"><span class="fa  fa-check"></span> Finalizo</a>

             </div>
        </div>
</div>

@section scripts
{
   @Scripts.Render("~/bundles/proceso")
}


