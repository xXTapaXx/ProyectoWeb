@model IEnumerable<ProyectoWeb.Models.Informacion>

@{
    ViewBag.Title = "Información";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">

        <table id="mytable" class="table table-striped table-bordered table-responsive">
            <h1 class="title-top-table">
                Información

                @Html.RouteLink(" Agregar", new { controller = "Informacion", action = "Create" }, new { @class = "glyphicon glyphicon-plus col-lg-2 btn btn-success submit-button pull-right" })
            </h1>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.num_orden)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.idcliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.idusuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fecha_ingreso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fecha_salida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre_trabajo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.observaciones)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.num_orden)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idcliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idusuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fecha_ingreso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fecha_salida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre_trabajo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.observaciones)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "btn btn-primary glyphicon glyphicon-pencil" })
                        @Html.ActionLink(" ", "Details", new { id = item.id }, new { @class = "btn btn-warning glyphicon glyphicon-eye-open" })
                        @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "btn btn-danger glyphicon glyphicon-remove" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

@section scripts
{
    <script>
        $("li.informacion").addClass("active");
    </script>
}
