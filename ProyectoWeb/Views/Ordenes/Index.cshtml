
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div id="content">
            <h1 class="title-top-table">
                Cliente
            </h1>
            @using (Html.BeginForm("Ordenes", "Ordenes"))
            {
                <div class="form-group">
                    @Html.Editor("fechaBuscar", new { htmlAttributes = new { @class = "form-control", @placeholder = "Buscar", @type = "date" } })
                    @Html.ValidationMessage("fechaBuscar", "", new { @class = "text-danger" })

                </div>
                    <div class="form-group">

                        <input type="submit" value="Buscar" class="btn btn-primary glyphicon glyphicon-search col-lg-12" />
                    </div>

            }
            <table id="mytable" class="table table-striped table-bordered table-responsive">
                
                <br /><br />
                    <thead>
                        <tr><th>Lunes</th><th>Martes</th><th>Miercoles</th><th>Jueves</th><th>Viernes</th></tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < ViewBag.Lunes.Count + ViewBag.Martes.Count + ViewBag.Miercoles.Count + ViewBag.Jueves.Count + ViewBag.Viernes.Count; i++)
                        {
                            if (i < ViewBag.Lunes.Count || i < ViewBag.Martes.Count || i < ViewBag.Miercoles.Count || i < ViewBag.Jueves.Count || i < ViewBag.Viernes.Count)
                            {
                                <tr>

                                    @if (i < ViewBag.Lunes.Count)
                                    {
                                        if (@ViewBag.Lunes[i].ubicacion == 5)
                                        {
                                            <td class="finalizo">@ViewBag.Lunes[i].num_orden</td>
                                        }
                                        else
                                        {
                                            <td>@ViewBag.Lunes[i].num_orden</td>

                                        }


                                    }
                                    else
                                    {
                                        <td></td>
                                    }

                                    @if (i < ViewBag.Martes.Count)
                                    {

                                        if (@ViewBag.Martes[i].ubicacion == 5)
                                        {
                                            <td class="finalizo">@ViewBag.Martes[i].num_orden</td>
                                        }
                                        else
                                        {
                                            <td>@ViewBag.Martes[i].num_orden</td>

                                        }
                                    }
                                    else
                                    {
                                        <td></td>
                                    }

                                    @if (i < ViewBag.Miercoles.Count)
                                    {

                                        if (@ViewBag.Miercoles[i].ubicacion == 5)
                                        {
                                            <td class="finalizo">@ViewBag.Miercoles[i].num_orden</td>
                                        }
                                        else
                                        {
                                            <td>@ViewBag.Miercoles[i].num_orden</td>

                                        }
                                    }
                                    else
                                    {
                                        <td></td>
                                    }

                                    @if (i < ViewBag.Jueves.Count)
                                    {

                                        if (@ViewBag.Jueves[i].ubicacion == 5)
                                        {
                                            <td class="finalizo">@ViewBag.Jueves[i].num_orden</td>
                                        }
                                        else
                                        {
                                            <td>@ViewBag.Jueves[i].num_orden</td>

                                        }
                                    }
                                    else
                                    {
                                        <td></td>
                                    }

                                    @if (i < ViewBag.Viernes.Count)
                                    {

                                        if (@ViewBag.Viernes[i].ubicacion == 5)
                                        {
                                            <td class="finalizo">@ViewBag.Viernes[i].num_orden</td>
                                        }
                                        else
                                        {
                                            <td>@ViewBag.Viernes[i].num_orden</td>

                                        }
                                    }
                                    else
                                    {
                                        <td></td>
                                    }

                                </tr>
                            }



                        }
                    </tbody>


            </table>
           
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/datatable")
}










