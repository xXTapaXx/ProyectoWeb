
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <table id="mytable" class="table table-striped table-bordered table-responsive">
    <h1 class="title-top-table">Buscar Orden</h1>
</table>

@using (Html.BeginForm("buscar", "BuscarOrden", new { id = "form-buscar" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-lg-3">
        <div class="form-group">
            @Html.Label("Numero de Orden", htmlAttributes: new { @class = "control-label" })

            @Html.Editor("num_orden", new { htmlAttributes = new { @class = "form-control", @placeholder = "Numero de Orden" } })
            @Html.ValidationMessage("Numero de Orden", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-lg-3">
        <div class="form-group">
            @Html.Label("Nombre Vendedora", htmlAttributes: new { @class = "control-label" })

            @Html.Editor("vendedora", new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre Vendedora" } })
            @Html.ValidationMessage("Nombre Vendedora", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-lg-3">
        <div class="form-group">
            @Html.Label("Nombre de Cliente", htmlAttributes: new { @class = "control-label" })

            @Html.Editor("cliente", new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre de Cliente" } })
            @Html.ValidationMessage("Nombre de Cliente", "", new { @class = "text-danger" })
        </div>
    </div>

                <div class="col-lg-3">
        <div class="form-group">
            @Html.Label("Nombre de Trabajo", htmlAttributes: new { @class = "control-label" })

            @Html.Editor("trabajo", new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre de Trabajo" } })
            @Html.ValidationMessage("Nombre de Trabajo", "", new { @class = "text-danger" })
        </div>
    </div>

                    <a type="button" id="buscar" data-title="buscar" data-placement="top" onclick="buscar();" href="#" class="btn btn-primary col-lg-12"><span class="glyphicon glyphicon-search"></span> Buscar</a>
                    }
                </div>

    <div class="col-lg-12" >

        <fieldset><legend id="legend"></legend></fieldset>
        <div class="responsive">
            <table id="Ordenes" class="table table-bordred table-striped">
                <tbody>

                    
                </tbody>

            </table>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/buscar")
}


